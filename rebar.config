{erl_opts,
 [warn_unused_import, warn_export_vars, warnings_as_errors, verbose, report, debug_info]}.


{deps, []}.

{project_plugins,
 [{rebar3_hank, "~> 1.4.1"},
  {rebar3_hex, "~> 7.0.11"},
  {rebar3_lint, "~> 4.1.1"},
  {rebar3_ex_doc, "~> 0.2.30"}]}.

{ex_doc, [
    %% FIXME clean up the docs!
    {extras, ["README.md", "LICENSE"]},
    {main, "README.md"},
    {source_url, "https://github.com/etnt/erl_chess_board"}
]}.

{profiles, [
    {test, [
        {deps, [
            {proper, ">= 1.4.0"}
        ]}
    ]}
]}.

{alias,
 [{test,
   [compile,
    hank,
    lint,
    xref,
    dialyzer,
    {eunit, "--cover"},
    cover,
    ex_doc]}]}.

{hank, [{ignore, ["scripts/*"]}]}.

{xref_checks,
 [undefined_function_calls, deprecated_function_calls, deprecated_functions]}.

{xref_extra_paths, ["test/**"]}.
